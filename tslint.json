{
  "extends": "tslint:recommended",
  "rules": {
    "object-literal-sort-keys": false,
    "max-line-length": false,
    "no-console": [
      false
    ],
    "no-var-requires": false,
    "no-shadowed-variable": [
      true,
      {
        "function": false
      }
    ],
    "semicolon": [
      true,
      "never"
    ],
    "array-type": [
      true,
      "generic"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ]
  }
}
